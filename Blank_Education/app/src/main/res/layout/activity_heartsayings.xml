<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="45dp"
        android:gravity="center"
        android:background="@color/title_color"
        android:orientation="horizontal"
        android:id="@+id/linearlayout_heartsayings_title"
        >

        <TextView
            android:layout_width="100dp"
            android:layout_height="fill_parent"
            android:gravity="center"
            android:textColor="@color/white"
            android:textSize="25dp"
            android:text="@string/heartsayings_title_text"/>

    </LinearLayout>

    <medusa.theone.waterdroplistview.view.WaterDropListView
        android:id="@+id/waterdrop_listview"
        android:layout_width="match_parent"
        android:divider="@color/color_gray"
        android:layout_height="wrap_content">
    </medusa.theone.waterdroplistview.view.WaterDropListView>

</RelativeLayout>
